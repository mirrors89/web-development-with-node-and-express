<form class="from-horizontal" role="form" enctype="multipart/form-data" action="/contest/vacation-photo/{{year}}/{{month}}" method="POST">
    <div class="from-group">
        <label for="fieldName" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-4"><input type="text" class="from-control" id="fieldName" name="name"></div>
    </div>
    <div class="from-group">
        <label for="fieldEmail" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-4"><input type="email" class="from-control" id="fieldEmail" name="email"></div>
    </div>
    <div class="from-group">
        <label for="fieldEmail" class="col-sm-2 control-label">Vacation photo</label>
        <div class="col-sm-4"><input type="file" class="from-control" required accept="image/*" id="fieldPhoto" name="photo"></div>
    </div>
    <div class="from-group">
        <div class="col-sm-offset-2 col-sm-4">
            <button type="submit" class="btn btn-default">Register</button>
        </div>
    </div>
</form>
